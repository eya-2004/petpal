pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                bat 'node --version'
                bat 'npm --version'
            }
        }
        
        stage('Build') {
            steps {
                bat 'npm install'
                bat 'npm run build'
            }
        }
        
        stage('Run Docker') {
            steps {
                bat 'docker build -t petpal:%BUILD_NUMBER% .'
                bat 'docker run -d -p 3000:80 --name petpal-%BUILD_NUMBER% petpal:%BUILD_NUMBER%'
                sleep 30
            }
        }
        
        stage('Smoke Test') {
            steps {
                bat 'bash smoke-test.sh'
            }
        }
        
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'build/**/*'
            }
        }
    }
    
    post {
        always {
            bat 'docker stop petpal-%BUILD_NUMBER% || true'
            bat 'docker rm petpal-%BUILD_NUMBER% || true'
        }
    }
}